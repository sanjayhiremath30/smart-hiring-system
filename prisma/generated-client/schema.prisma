generator client {
  provider = "prisma-client-js"
  output   = "./generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  passwordHash  String
  name          String?
  role          Role             @default(STUDENT)
  skills        String[]         @default([])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  applications  Application[]
  notifications Notification[]
  savedJobs     UserSavedJob[]
  testResults   UserTestResult[]
}

model Job {
  id           String         @id @default(uuid())
  title        String
  description  String
  status       String         @default("PENDING")
  createdAt    DateTime       @default(now())
  company      String?
  location     String?
  salary       String?
  skills       String[]       @default([])
  state        String?
  applyUrl     String?
  createdBy    String?
  applications Application[]
  savedBy      UserSavedJob[]
}

model MockTest {
  id           String           @id @default(uuid())
  type         String
  title        String
  description  String?
  questions    Json
  difficulty   String?
  durationMins Int?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  userResults  UserTestResult[]
}

model UserTestResult {
  id          String   @id @default(uuid())
  userId      String
  testId      String
  score       Float
  maxScore    Float?
  answers     Json?
  completedAt DateTime @default(now())
  mockTest    MockTest @relation(fields: [testId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Application {
  id        String   @id @default(uuid())
  name      String
  email     String
  jobId     String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  userId    String?
  job       Job      @relation(fields: [jobId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model UserSavedJob {
  id        String    @id @default(uuid())
  userId    String
  jobId     String
  status    JobStatus @default(NEW)
  createdAt DateTime  @default(now())
  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, jobId])
}

model Notification {
  id            String   @id @default(uuid())
  userId        String
  type          String
  title         String
  message       String
  applicationId String?
  read          Boolean  @default(false)
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  ADMIN
}

enum JobStatus {
  NEW
  SAVED
  APPLIED
  ARCHIVED
}
